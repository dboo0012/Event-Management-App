<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@android:color/darker_gray"
    app:cardCornerRadius="8dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rv_categoryId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 1"
            app:layout_constraintEnd_toStartOf="@+id/rv_categoryName"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 2"
            app:layout_constraintEnd_toStartOf="@+id/rv_eventCount"
            app:layout_constraintStart_toEndOf="@+id/rv_categoryId"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_eventCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 3"
            app:layout_constraintEnd_toStartOf="@+id/rv_categoryIsActive"
            app:layout_constraintStart_toEndOf="@+id/rv_categoryName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_categoryIsActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rv_eventCount"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>